# ---------------------------------
# Correios configuration file
# ---------------------------------
#
# The commented-out settings shown in this file represent the default values.
#
# This file is read when correios-service start
#
# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------

# Address and port on which Correios Service will accept HTTP requests.
LISTEN={{ correios_service_listen | default("0.0.0.0:8000") }}

# Log folder path for access and application logging. Default "stdout".
LOG_FOLDER=/var/log/correios-service

# If defined the Correios Service will accept only HTTPS requests
SSL_CERT={{ correios_service_ssl_cert | default("") }}
SSL_KEY={{ correios_service_ssl_key | default("") }}

# -----------------------------------------------------------------------------
# Datastore
# -----------------------------------------------------------------------------

# Storage used by Stock Service to retrieve search engines.

# Storage file
DATABASE_FILE={{ correios_service_storage_file | default("/etc/correios-service/core.database.yml") }}

# -----------------------------------------------------------------------------
# Correios Web-Service specifics
# -----------------------------------------------------------------------------

# File used by Correios service to connect to Brazilian Correios

# Storage file
CORREIOS_FILE="/etc/correios-service/core.correios.yml"

# -----------------------------------------------------------------------------
# Revision file
# -----------------------------------------------------------------------------

# Expose the revision file generated by build into url

# Revision file
REVISION_FILE={{ correios_service_revision_file | default("/etc/correios-service/rev.txt") }}

# -----------------------------------------------------------------------------
# Swagger file
# -----------------------------------------------------------------------------

# Expose the swagger file

# Swagger file
SWAGGER_FILE={{ correios_service_swagger_file | default("/etc/correios-service/swagger.yml") }}

# -----------------------------------------------------------------------------
# Metrics and Monitoring
# -----------------------------------------------------------------------------

# If you want enable the NewRelic for monitoring or metrics, please define the
# required configurations bellow:

# Set the application name, this configuration is required for NewRelic.
NEWRELIC_APPNAME={{ correios_service_newrelic_appname | default("") }}

# Set the license key, this config is required for NewRelic.
NEWRELIC_LICENSE_KEY={{ correios_service_newrelic_license_key | default("") }}
